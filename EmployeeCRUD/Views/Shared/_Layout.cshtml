<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - P1F Apps</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .app-wrapper {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 70px; 
            background-color: #222; 
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 15px;
        }

        .sidebar-logo {
            width: 40px;
            height: 40px;
        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .app-header {
            background-color: #009530; 
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 60px;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 15px; 
        }

        .header-left h3 {
            margin: 0;
            font-weight: bold;
        }

        .header-left .bi-list {
            font-size: 2rem;
            cursor: pointer;
        }

        .header-logo {
            height: 40px; 
        }

        .content-area {
            padding: 20px;
            overflow-y: auto; 
            background-color: #f4f4f4; 
            flex-grow: 1;
        }

    </style>
</head>
<body>

    <div class="app-wrapper">
        <div class="sidebar">
            <img src="~/images/se-2.png" alt="SE Logo" class="sidebar-logo" />
        </div>

        <div class="main-content">
            <header class="app-header">
                <div class="header-left">
                    <i class="bi bi-list"></i>
                    <h3>P1F Apps</h3>
                </div>
                <img src="~/images/se-1.png" alt="Schneider Logo" class="header-logo" sizes="50px" />
            </header>

            <main role="main" class="content-area">
                @RenderBody()
            </main>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>